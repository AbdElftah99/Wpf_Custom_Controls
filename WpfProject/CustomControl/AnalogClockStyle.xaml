<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfProject.CustomControl">

    <Style TargetType="{x:Type local:AnalogClock}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:AnalogClock}">
                    <Grid>
                        <Ellipse Fill="White" Stroke="Black" StrokeThickness="2"/>
                        <Line x:Name="HourHand" Stroke="Black" StrokeThickness="4" 
                              X1="50" Y1="50" X2="50" Y2="20"/>
                        <Line x:Name="MinuteHand" Stroke="Black" StrokeThickness="3" 
                              X1="50" Y1="50" X2="50" Y2="20"/>
                        <Line x:Name="SecondHand" Stroke="Red" StrokeThickness="2" 
                              X1="50" Y1="50" X2="50" Y2="5"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>